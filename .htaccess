<IfModule mod_rewrite.c>
    RewriteEngine On

    # Evita reescrituras en cadena para rutas ya dentro de /public
    RewriteCond %{REQUEST_URI} !^/public/

    # Mantén accesibles archivos/carpetas reales en la raíz
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Reescribe internamente hacia el front controller en /public
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
