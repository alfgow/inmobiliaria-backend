<IfModule mod_rewrite.c>
    RewriteEngine On

    # Evita ciclos si la URL ya apunta a /public
    RewriteCond %{REQUEST_URI} !^/public/

    # En despliegues con DocumentRoot en la ra√≠z del repo,
    # forzamos todas las rutas al front controller dentro de /public.
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
